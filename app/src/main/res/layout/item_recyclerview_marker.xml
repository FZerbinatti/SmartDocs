<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/square_corners_dark">

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginStart="10dp"
        android:textColor="@color/black_opaque"
        android:textSize="40sp"
        android:fontFamily="@font/robotoregular"
        app:layout_constraintBottom_toBottomOf="@+id/item_picture_marker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_picture_marker" />


    <ImageView
        android:id="@+id/item_picture_marker"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/square_corners_dark"
        android:padding="3dp"
        android:layout_marginStart="65dp"
        android:src="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_description_marker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        android:fontFamily="@font/robotoregular"
        android:text="Descrizione del punto di interese"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_picture_marker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_picture_marker"
        app:layout_constraintTop_toTopOf="@+id/item_picture_marker" />






</androidx.constraintlayout.widget.ConstraintLayout>