<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip"
                android:color="@color/material_green2" />
            <gradient android:angle="-90"
                android:startColor="@color/y2"
                android:endColor="@color/y2"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip"
                android:color="@color/y2" />
            <solid android:color="@color/y2"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip"
                android:color="@color/material_green2" />
            <gradient android:angle="-90"
                android:startColor="@color/grey_opaque"
                android:endColor="@color/grey_opaque" />
        </shape>
    </item>
</selector>